---
import svgClose from "../images/SvgClose.svg";
import svgOpen from "../images/SvgOpen.svg";
import type { DevPost } from "../customTypes";

interface Props {
  data: DevPost[];
}

const bgColor = {
  backgroundColor: "#3d3d3d",
};

const { data } = Astro.props;
---

<article
  style={bgColor}
  class="relative flex flex-col rounded-xl py-16 px-4 lg:px-10 z-0"
>
<div class="bg-noise absolute w-full h-full inset-0 -z-10 opacity-50 mix-blend-overlay" />
  <div class="absolute top-5 right-5 flex justify-end gap-3">
    <a href="#">
      <img src={svgOpen} width={30} alt="open card" />
    </a>
    <img src={svgClose} width={30} alt="close card" />
  </div>
  
  <h3
    class="text-6xl lg:text-8xl text-right font-bold mt-4 mb-12 text-slate-300 leading-5"
  >
    {data[0].title}
  </h3>
  <p
    class="rotate-0 md:rotate-90 bg-white px-2 rounded-full absolute top-4 left-4 md:top-1/2 md:-left-16 flex items-center gap-2"
  >
    <span
      style={{ backgroundColor: "#6d6d6d" }}
      class="relative inline-block w-4 h-4 rounded-full"></span>
    {data[0].published_at.toLocaleString()}
  </p>
  <p class="lg:text-xl md:ml-48 text-slate-100 font-thin">{data[0].description}</p>

  <div class="flex self-end items-center gap-8">
    <a
      class="flex gap-2 items-center relative hover:underline underline-offset-2 text-arjelblue"
      href={`blog/${data[0].slug}`}
    >
      <span class="text-sm p-2 rounded bg-teal-100"> Read Post</span>
    </a>
    <a
      href="/blog/allposts"
      class="hover:underline underline-offset-2 text-arjelblue text-sm p-2 rounded bg-teal-100"
    >
      All posts
    </a>
  </div>
</article>
