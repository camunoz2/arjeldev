---
import Layout from "../layouts/Layout.astro";
import HeaderCards from "../components/HeaderCards";
import HomeExtras from "../components/HomeExtras";
import BlogSection from "../components/BlogSection.astro";
import ArjelFixed from "../components/ArjelFixed.astro";
import type { DevPost } from "../customTypes";

const response = await fetch("https://dev.to/api/articles?username=arjeldev");
const blogPosts: DevPost[] = await response.json();

---

<Layout title="Home">
  <ArjelFixed />
  <main class="flex flex-col items-end">
    <div class="flex flex-col gap-4 xl:max-w-[1000px] 2xl:max-w-[1300px]">
      <!-- <HeaderCards data={projects} client:load /> -->
      <!-- <HomeExtras client:load /> -->
      <BlogSection data={blogPosts} />
    </div>
  </main>
</Layout>
